{
  "include": [
    "**/*.{ts,tsx,js,jsx}",
    ".react-router/types/**/*",
    "__create/**/*",
    "src/env.d.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "vite/client"],
    
    /* Bundler mode (Recomendado para Vite/Bun) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Estrictos */
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Mejora de compatibilidad */
    "moduleDetection": "force",
    "allowJs": true
  }
}